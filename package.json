{
  "name": "rapidmock-studio",
  "version": "1.0.0",
  "description": "Professional Offline Mockup Generator with Realistic Fabric Warping",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.rapidmock.studio",
    "productName": "RapidMockup Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ArhamAshfaqft",
        "repo": "RapidMockupStudio"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArhamAshfaqft/RapidMockupStudio.git"
  },
  "keywords": [
    "mockup",
    "bulk",
    "design",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "pixi.js": "^7.3.2"
  }
}